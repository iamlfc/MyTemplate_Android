<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="tabLayoutStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_8f8e94</item>
        <!--字体小写-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="titleBarStyle">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:textColor">@color/black</item>
        <!--字体小写-->
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 视频封面 -->
    <declare-styleable name="VideoImageView">
        <!-- 比例 -->
        <attr name="vimg_ratio" format="float" />
        <!-- 宽度偏差 -->
        <attr name="vimg_woffset" format="integer" />
    </declare-styleable>

    <declare-styleable name="TitleBar">

        <attr name="bottomTextVisible" format="boolean" />
        <attr name="bottomText" format="reference|string" />
        <attr name="bottomTextColor" format="reference" />
        <attr name="leftText" format="reference|string" />
        <attr name="middleText" format="reference|string" />
        <attr name="rightText" format="reference|string" />
        <attr name="rightVisible" format="boolean" />
        <attr name="leftVisible" format="boolean" />
        <attr name="showStatusBar" format="boolean" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
        <attr name="middleTextColor" format="reference" />
        <attr name="rightTextColor" format="reference" />
        <attr name="leftTextColor" format="reference" />
        <attr name="leftTextSize" format="reference" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="leftTextBold" format="boolean" />
        <attr name="middleTextBold" format="boolean" />
        <attr name="rightTextBold" format="boolean" />
        <attr name="background" format="reference" />
        <attr name="middleTextVisible" format="boolean" />
        <attr name="rightIconVisible" format="boolean" />
        <attr name="showDividerLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="EmptyDataView">
        <!-- 背景颜色 -->
        <attr name="bg_color" format="color" />
        <attr name="emptyImage" format="reference" />
        <attr name="emptyText" format="string" />
        <!-- 下边距 -->
        <attr name="emptyPaddingBottom" format="dimension" />
    </declare-styleable>


    <!-- Base application theme. -->
    <style name="Theme.SumTea" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="second">@color/colorPrimary</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SplashAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 启动背景 -->
        <item name="android:windowBackground">@mipmap/bg_welcome</item>
    </style>




    <style name="style_mine_service">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_58</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_222427</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>



</resources>